{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (Nodemon)",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug Frontend (Angular)",
      "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
      "args": ["build", "--watch", "--configuration", "development"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full App",
      "configurations": ["Debug Backend (Nodemon)", "Debug Frontend (Angular)"]
    }
  ]
}
